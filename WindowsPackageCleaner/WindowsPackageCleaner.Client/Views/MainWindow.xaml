<Window x:Class="WindowsPackageCleaner.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow">

    <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left" ItemsSource="{Binding Packages}" Margin="10" VerticalAlignment="Top">
        <DataGrid.Columns>
            <DataGridCheckBoxColumn/>
            <DataGridTextColumn Binding="{Binding DisplayName}" CanUserSort="True" Header="Display Name" Width="Auto"/>
            <DataGridTextColumn Binding="{Binding Publisher}" CanUserSort="True" Header="Publisher" Width="Auto"/>
            <DataGridTextColumn Binding="{Binding InstalledDate}" CanUserSort="True" Header="Installed Date" Width="Auto"/>
            <DataGridTextColumn Binding="{Binding Version}" Header="Version" Width="Auto"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
